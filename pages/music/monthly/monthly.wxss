/* pages/music/motnly/monthly.wxss */
.container {
    width: 100%;
    height: 100%;
    border-top: 1px solid #b2b2b2;
}

.music-wrapper {
    width: 100%;
    height: 120rpx;
}

.picture {
    float: left;
    width: 136rpx;
    height: 100%;
    text-align: center;
}

.picture image {
    width: 108rpx;
    height: 102rpx;
    margin-top: 6rpx;
}

.desc {
    position: relative;
    float: left;
    width: calc(100% - 136rpx);
    height: 100%;
    border-bottom: 1px solid #e5e5e5;
}

.title {
    display: block;
    margin: 10rpx 0;
    font-size: 16px;
}

.author {
    display: block;
    font-size: 12px;
    color: #9fc1ea;
}

.forward {
    position: absolute;
    top: 50%;
    right: 20rpx;
    margin-top: -10px;
    width: 20px;
    height: 20px;
}
