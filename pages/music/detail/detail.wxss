/* pages/music/detail/detail.wxss */
.container {
    width: 100%;
    height: 100%;
    padding: 0 15px;    
    border-top: 1px solid #eee;
    box-sizing: border-box;
}

.picture {
    position: relative;
    width: 100%;
    height: 600rpx;
}

.picture-inner {
    position: absolute;
    top: -400rpx;
    left: -350rpx;
    width: 880rpx;
    height: 880rpx;
    text-align: center;
    border-radius: 50%;
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
}

.picture-inner image {
    width: 800rpx;
    height: 800rpx;
    margin-top: 40rpx;    
    border-radius: 50%;
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.picture-control {
    position: absolute;
    top: 20rpx;
    left: 40rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.7);
    text-align: center;
}

.picture-control image {
    width: 100rpx;
    height: 100rpx;
}

.music-desc {
    width: 100%;
    text-align: center;
    font-size: 14px;
    color: #666;
}

.music-title {
    display: block;
    margin-bottom: 30rpx;
}

.music-info {
    display: block;
    margin-bottom: 80rpx;
}

.title {
    width: 100%;
    margin-bottom: 40rpx;    
    font-size: 28px;
    color: #000;
    text-align: center;
}

.author {
    width: 100%;
    margin-bottom: 30rpx;    
    font-size: 14px;
    color: #333;
    text-align: center;
}

.content {
    line-height: 1.5;
    font-size: 14px;
}

.edt-introduce {
    margin: 20px 0;
    color: #888;
    font-size: 12px;
}

.edt-introduce text {
    display: block;
    margin-bottom: 20px;
}

.split {
    width: 150rpx;
    height: 6rpx;
    margin-top: 20rpx;    
    margin-bottom: 30rpx;
    background: #333;    
}

