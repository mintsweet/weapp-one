/* pages/movie/movie.wxss */
.container {
    width: 100%;
    height: 100%;
    border-top: 1px solid #b2b2b2;
}

.movie-wrapper {
    width: 100%;
    padding: 0 42rpx;
    box-sizing: border-box;
}

.header {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 14px;
    color: #a9a9a9;
}

.title {
    margin-bottom: 34rpx;
    font-size: 20px;
}

.author {
    padding-bottom: 34rpx;
    border-bottom: 1px solid #f2f2f2;
    font-size: 14px;
    color: #a9a9a9;
}

.picture {
    width: 100%;
    height: 400rpx;
    border-top: 10rpx dashed #e5e5e5;
    border-bottom: 10rpx dashed #e5e5e5;
}

.picture image {
    width: 100%;
    height: 380rpx;
    margin-top: 10rpx;
}

.summary {
    margin-top: 30rpx;
    line-height: 1.5;
    font-size: 14px;
    color: #a9a9a9;
}

.movie-title {
    text-align: right;
}

.footer {
    width: 100%;
    margin-bottom: 30rpx;
    margin-top: 80rpx;
    font-size: 14px;
    color: #a6a6a6;
}

.before-time {
    float: left;
}

.praise-share {
    float: right;
}

.praise-num {
    display: inline-block;
    margin-right: 10rpx;
    font-size: 14px;    
    vertical-align: top;
}

.praise-image, .share-image {
    width: 18px;
    height: 18px;
    vertical-align: top;
}

.share-image {
    margin-left: 30rpx;
}

.article-split {
    width: 100%;
    height: 14rpx;
    background-color: #eee;
    border-top: 1px solid #e2e2e2;
}
