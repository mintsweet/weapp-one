/* pages/movie/story/story.wxss */
.container {
    width: 100%;
    height: 100%;
    padding: 0 46rpx;
    border-top: 1px solid #eee;
    box-sizing: border-box;
    text-align: center;    
}

.poster {
    margin: 46rpx 0;
}

.poster image {
    width: 334rpx;
    height: 478rpx;
}

.title {
    margin-bottom: 42rpx;
    font-size: 18px;
    color: #333;
}

.summary {
    margin-bottom: 90rpx;
    font-size: 14px;
    color: #333;
}

.info {
    margin-bottom: 130rpx;
    line-height: 24px;
    font-size: 12px;
    color: #808080;
}

.text {
    display: block;
    width: 100%;
    margin-bottom: 64rpx;
    font-size: 12px;
    color: #808080;
}

.content {
    margin-bottom: 100rpx;
    font-size: 14px;
    color: #333;
    box-sizing: border-box;
}