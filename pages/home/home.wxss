/* pages/home/home.wxss */
.container {
  width: 100%;
  height: 100%;
  border-top: 1px solid #eee;
}

.hp-swiper {
  width: 100%;
  height: 1070rpx;
  background: #fff;
}

.hp-swiper-item {
  width: 100%;
  height: 100%;  
}

.hp-wrapper {
  width: 100%;
  height: 100%;
  font-weight: 200;
  border-bottom: 10px solid  #e2e2e2;    
}

.hp-time {
  width: 100%;
  height: 128rpx;
  text-align: center;
}

.hp-time-text {
  display: block;
  line-height: 40px;  
  font-size: 20px;
}

.hp-time-desc {
  display: block;
  line-height: 20px;
  font-size: 12px;
}

.hp-picture {
  position: relative;
  width: 100%;
  height: 508rpx;
}

.hp-picture-cover {
  width: 100%;
  height: 100%;
}

.hp-title {
  position: absolute;
  top: 5rpx;
  left: 5rpx;
  font-size: 12px;
  font-weight: 200;
  color: #fff;
}

.hp-author {
  margin: 28rpx 0 50rpx 0;
  text-align: center;
  font-size: 12px;
  color: #909090;
}

.hp-content {
  padding: 0 82rpx;
  font-size: 14px;
  color: #333333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hp-text_authors {
  margin: 50rpx 0 76rpx  0;
  font-size: 12px;
  text-align: center;
  color: #858585;
}

.hp-btns {
  padding: 0 34rpx;
}

.hp-btns-left {
  float: left;
  font-size: 14px;
  vertical-align: top;
}

.hp-btns-left image {
  width: 16px;
  height: 16px;
  vertical-align: top;
}

.hp-btns-right {
  float: right;
  font-size: 12px;
  vertical-align: middle;  
}

.hp-btns-right image{
  width: 18px;
  height: 18px;
  vertical-align: middle;
}

.hp-favorite-num {
  margin-right: 6rpx;
}

.hp-btn-share {
  margin-left: 36rpx;
}

.article-split {
    width: 100%;
    height: 14rpx;
    background-color: #eee;
    border-top: 1px solid #e2e2e2;
    z-index: 2;
}
