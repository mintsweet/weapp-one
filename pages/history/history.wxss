/* pages/history/history.wxss */
.container {
    width: 100%;
    height: 100%;
    border-top: 1rpx solid #b0b1b2;
}

.nav {
    width: 100%;
    height: 58rpx;
    font-size: 12px;
    color: #949494;
    border-bottom: 2px solid #aaaaaa;
}

.nav text {
    display: inline-block;
    width: 150rpx;
    height: 58rpx;
    line-height: 58rpx;
    text-align: center;
    box-sizing: border-box;
}

.active {
    border-bottom: 4px solid #8eb6e6;
    margin-top: 2px;
}

.bymonth {
    position: relative;
    width: 100%;
    height: 98rpx;
    padding: 0 32rpx;
    line-height: 98rpx;
    border-bottom: 1px solid #e5e5e5;
    box-sizing: border-box;
}

.date {
    font-size: 14px;
    color: #7f7f7f;
}

.forward {
    position: absolute;
    top: 50%;
    right: 30rpx;
    width: 20px;
    height: 20px;
    margin-top: -10px;
}